#!/usr/bin/env bash
###########################################
## database_cremona_ellcurve
###########################################

if [ -z "$SAGE_SHARE" ]; then
    echo >&2 "SAGE_SHARE undefined ... exiting"
    echo >&2 "Maybe run 'sage --sh'?"
    exit 1
fi

TARGET="${SAGE_SHARE}/cremona"
if [ ! -d "${TARGET}" ]; then
   mkdir "${TARGET}"
fi

cd src

cp * "${TARGET}/"
if [ $? -ne 0 ]; then
   echo "Error installing cremona database"
   exit 1
fi
